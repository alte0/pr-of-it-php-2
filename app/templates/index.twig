{% extends layout %}

{% block pageContent %}
<div>
    {% for article in articles %}
        <div class="d-md-flex py-3">
            <div class="flex-shrink-0">
                <img src="https://placehold.co/100x100" alt="" width="100" height="100">
            </div>
            <div class="flex-grow-1 ms-md-3">
                <h3>
                    <a href="/news/article/id{{ article.id }}/">{{ article.title }}</a>
                    <a href="/edit/article/id{{ article.id }}/"><i class="bi bi-pencil"></i></a>
                </h3>
                <p>{{ article.content }}</p>
                <p class="mb-0"><strong>Автор:</strong> {{ article.getAuthor.fio }}</p>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}